    "battleships-engine": "https://github.com/ships-online/battleships-engine.git",
    "battleships-theme-wireframe": "https://github.com/ships-online/battleships-theme-wireframe.git",
    "battleships-ui-vanilla": "https://github.com/ships-online/battleships-ui-vanilla.git"
  },
  "devDependencies": {
    "babel-loader": "^7.1.0",
    "battleships-dev-tools": "https://github.com/ships-online/battleships-dev-tools.git",
